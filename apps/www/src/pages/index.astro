    name: "vite",
    href: "https://vite.dev",
    Logo: Vite,
  },
  {
    name: "react",
    href: "https://react.dev",
    Logo: React,
  },
  {
    name: "hono",
    href: "https://hono.dev",
    Logo: Hono,
  },
  {
    name: "tanstack",
    href: "https://tanstack.com",
    logo: tanstack,
  },
  {
    name: "trpc",
    href: "https://trpc.io",
    Logo: TRPC,
  },
  {
    name: "turborepo",
    href: "https://turbo.build/repo",
    Logo: Turborepo,
  },
  {
    name: "cloudflare",
    href: "https://cloudflare.com",
    Logo: Cloudflare,
  },
  {
    name: "typescript",
    href: "https://www.typescriptlang.org",
    Logo: Typescript,
  },
  {
    name: "bun",
    href: "https://bun.sh",
    Logo: Bun,
